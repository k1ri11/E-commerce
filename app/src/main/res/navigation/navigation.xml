<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.e_commerce.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_mainFragment_to_coursePageFragment"
            app:destination="@id/coursePageFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.e_commerce.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.e_commerce.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/coursePageFragment"
        android:name="com.example.e_commerce.CoursePageFragment"
        android:label="fragment_course_page"
        tools:layout="@layout/fragment_course_page" >
        <action
            android:id="@+id/action_coursePageFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/action_coursePageFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
</navigation>